@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Input.Consent" class="form-check-input" />
                <label asp-for="Input.Consent" class="d-inline"></label>
                <span asp-validation-for="Input.Consent" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Privacy note:</h4>
            <hr />
            <p>We will only collect the following information:</p>
            <ul>
                <li>Log in data.</li>
                <li>Email – for critical/voluntary communication.</li>
                <li>The entities that you create (personas, interests, recommendations, votes and comments)
                    – for moderation and to improve your suggestions page.</li>
            </ul>
            <p>All information is stored indefinetely until you request it to be removed via the <i>Account Management</i> page.</p>
            <p>We only use one cookie for authentication.</p>
            <p>You must agree to these conditions in order to continue.</p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
